{% extends "base.html.twig" %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    {# cr√©er form de log  #}

    <h1>Connexion</h1>

    <form action="{{ path('login') }}" method="post">
        <div class="form-group">
            <label class="form-label" for="username"> Pseudo </label>
            <input class="form-control" required type="text" name="_username">
        </div>
        <div class="form-group">
            <label for="password" class="form-label"> Pass </label>
            <input class="form-control" type="password" required name="_password">
        </div>

        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

        <div class="form-group">
            <button type="submit" class="btn btn-success">Connexion</button>
        </div>

    </form>

{% endblock %}